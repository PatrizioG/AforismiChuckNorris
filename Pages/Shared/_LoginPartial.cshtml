@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    

    <li class="menu__item">
        <a class="link link--dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
    </li>
    <li class="menu__item">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
            <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="menu__item">
        <a class="link link--dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="menu__item">
        <a class="link link--dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
