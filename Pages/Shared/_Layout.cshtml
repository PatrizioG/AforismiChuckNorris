<!DOCTYPE html>
<html lang="en">
<head>  
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ChuckNorrisAphorisms</title>
    <!--<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />-->
    <!--<link rel="stylesheet" href="~/css/site.css" />-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css?family=Nunito+Sans:300,400,600,700,800,900" rel="stylesheet">
    <link rel="stylesheet" href="~/css/scribbler-global.css">
    <link rel="stylesheet" href="~/css/scribbler-landing.css">

</head>
<body>

    <nav>
        <div class="logo"></div>
        <ul class="menu">
            <div class="menu__item toggle"><span></span></div>
            <li class="menu__item">
                <a class="link link--dark" asp-area="" asp-page="/Index"><i class="fa fa-home"></i> Home</a>
            </li>
            <li class="menu__item">
                <a href="https://github.com/PatrizioG/AforismiChuckNorris" target="_blank" class="link link--dark"><i class="fa fa-github"></i> Github</a>
            </li>
            <partial name="_LoginPartial" />
        </ul>
    </nav>

    <div class="hero">
        <h1 class="hero__title">ChuckNorrisAphorisms</h1>
        <p class="hero__description">A open source JSON API for Chuck Norris aphorisms written in ASP NET CORE</p>
    </div>

    <div class="wrapper">

        @RenderBody()

    </div>

    @RenderSection("changelog", false);

    <footer class="footer"> &copy; 2021 - ChuckNorrisAphorisms </footer>

    <script src="~/js/site.js"></script>
    <script src="~/js/scribbler.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
